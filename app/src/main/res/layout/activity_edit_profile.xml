<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edit_profile_picture"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="profile picture"
        android:src="@drawable/anon_user" />


    <TextView
        android:id="@+id/edit_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="John Doe"
        android:textSize="24sp"
        android:layout_below="@id/edit_profile_picture"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="jdoe@jhu.edu"
        android:paddingBottom="16dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edit_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Phone Number:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="184dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/edit_email"
        android:layout_below="@id/user_email"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="8dp"
        android:ems="10"/>

    <EditText
        android:id="@+id/phoneNum_editText"
        android:layout_width="184dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/edit_phone_number"
        android:layout_below="@id/email_editText"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:ems="10"/>

    <ImageView
        android:id="@+id/change_profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/edit_icon"
        android:layout_alignTop="@id/edit_profile_picture"
        android:layout_alignBottom="@id/edit_profile_picture"
        android:layout_alignLeft="@id/edit_profile_picture"
        android:layout_alignRight="@id/edit_profile_picture"    />

    <Button
        android:id="@+id/edit_profile_cancel"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/edit_profile_save"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_alignRight="@id/edit_profile_cancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="Save" />

</RelativeLayout>
